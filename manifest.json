{
  "manifest_version": 3,
  "name": "YouTube Transcript Extractor",
  "version": "1.1",
  "description": "Extract transcripts from YouTube videos instantly and integrate with your website.",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["*://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Extract Transcript"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    },
    {
      "matches": [
        "https://youtube-transcript-app-0k5f.onrender.com/*",
        "http://localhost:5000/*",
        "http://127.0.0.1:5000/*"
      ],
      "js": ["site_bridge.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
