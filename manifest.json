{
  "manifest_version": 3,
  "name": "YouTube Transcript Extractor",
  "version": "1.0",
  "description": "Extract transcripts from YouTube videos instantly",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Extract Transcript"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
